{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper mt-4">
    <h2>Author</h2>
    {% if user is not empty %}
        {% set author = user[0] %}
        <div class="card" style="max-width: 400px;">
            <div class="card-body">
                <h5 class="card-title">{{ author.name }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">@{{ author.username }}</h6>
                <p class="card-text">Email: <a href="mailto:{{ author.email }}">{{ author.email }}</a></p>
            </div>
        </div>
    {% else %}
        <p>No author.</p>
    {% endif %}
    <a href="{{path('app_posts')}}" class="btn btn-secondary mt-3">Back to Posts</a>
</div>
{% endblock %}
